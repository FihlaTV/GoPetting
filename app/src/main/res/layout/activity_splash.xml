<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/rl_activity_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@id/iv_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_logo"  />

    <com.gopetting.android.views.TypefaceTextView
        android:id="@+id/tv_splash_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@id/iv_splash"
        android:layout_marginTop="5.0dip"
        android:text="GoPetting"
        android:textColor="@color/item_text_regular"
        android:textSize="@dimen/text_size_large"
        app:customTypeface="@string/typeface_bold"/>

    <!--android:src="@mipmap/ic_launcher"-->
    <!--android:visibility="invisible"-->
    <ProgressBar
        android:id="@id/progress_bar_medium"
        android:layout_width="18.0dip"
        android:layout_height="18.0dip"
        android:layout_below="@id/tv_splash_logo"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10.0dip"
        android:indeterminateDrawable="@drawable/progress_bar_medium" />

</RelativeLayout>