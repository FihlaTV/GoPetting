<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="80.dip"
    android:layout_height="80.0dip"
    android:background="@drawable/selector_date"
    android:orientation="vertical">

    <com.gopetting.android.views.TypefaceTextView
        android:id="@id/tv_month"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_date"
        android:layout_marginTop="5.0dip"
        android:gravity="center"
        android:textColor="@color/selector_date_time_text"
        android:textSize="@dimen/text_size_medium_special"
        app:customTypeface="@string/typeface_regular" />


    <com.gopetting.android.views.TypefaceTextView
        android:id="@id/tv_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_day"
        android:layout_marginTop="2.0dip"
        android:gravity="center"
        android:textColor="@color/selector_date_time_text"
        android:textSize="@dimen/text_size_xlarge"
        app:customTypeface="@string/typeface_regular" />

    <com.gopetting.android.views.TypefaceTextView
        android:id="@id/tv_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="3.0dip"
        android:layout_marginLeft="5.0dip"
        android:layout_marginRight="5.0dip"
        android:gravity="center"
        android:paddingBottom="2.0dip"
        android:paddingTop="2.0dip"
        android:textColor="@color/selector_date_time_text"
        android:textSize="@dimen/text_size_medium_special"
        app:customTypeface="@string/typeface_regular" />

</RelativeLayout>