<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="10.0dip"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >

            <com.gopetting.android.views.TypefaceTextView
                android:id="@+id/order_service_name_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:padding="5dp"
                android:textColor="@color/item_text_regular"
                android:textSize="@dimen/text_size_large"
                app:customTypeface="@string/typeface_bold" />

                <com.gopetting.android.views.TypefaceTextView
                    android:id="@+id/tv_order_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingRight="5.0dip"
                    android:paddingTop="5.0dip"
                    android:textColor="@color/item_text_regular"
                    android:textSize="@dimen/text_size_medium_special"
                    app:customTypeface="@string/typeface_regular"  />



        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1.0">

            <com.gopetting.android.views.TypefaceTextView
                android:id="@+id/order_id_lbl"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"

                android:padding="5dp"
                android:paddingBottom="5.0dip"
                android:text="Order Id :"
                android:textColor="@color/item_text_regular"
                android:textSize="@dimen/text_size_medium_special"
                app:customTypeface="@string/typeface_regular" />


            <com.gopetting.android.views.TypefaceTextView
                android:id="@+id/order_id_txt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"

                android:paddingBottom="5.0dip"

                android:textColor="@color/item_text_regular"
                android:textSize="@dimen/text_size_medium_special"
                app:customTypeface="@string/typeface_regular" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

         >


            <com.gopetting.android.views.TypefaceTextView
                android:id="@+id/order_date_txt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:paddingBottom="5.0dip"
                android:textColor="@color/item_text_regular"
                android:textSize="@dimen/text_size_medium_special"
                app:customTypeface="@string/typeface_regular" />

            <!--<ImageView-->
                <!--android:id="@+id/forword_arraow"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:src="@drawable/ic_chevron_right" />-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5.0dip"
            android:paddingBottom="15.0dip"
            android:paddingLeft="5.dip"
            android:paddingRight="5.dip"
            android:weightSum="1.0">

            <com.gopetting.android.views.TypefaceTextView
                android:id="@+id/order_time_txt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"


                android:textColor="@color/item_text_regular"
                android:textSize="@dimen/text_size_medium_special"
                app:customTypeface="@string/typeface_regular" />

            <com.gopetting.android.views.TypefaceTextView
                android:id="@+id/order_status_txt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5.0dip"
                android:layout_weight="0.4"
                android:gravity="right"
                android:textColor="@color/item_text_regular"
                android:textSize="@dimen/text_size_medium"
                app:customTypeface="@string/typeface_regular" />
        </LinearLayout>



    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:alpha=".5"
        android:background="@color/grey_500"
        />


</LinearLayout>