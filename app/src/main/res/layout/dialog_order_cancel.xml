<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp">

    <com.gopetting.android.views.TypefaceTextView
        android:id="@+id/order_service_name_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_service_package_name"
        android:padding="5dp"
        android:text="@string/text_cancel_reason"
        android:textColor="@color/item_text_regular"
        android:textSize="@dimen/text_size_large"
        app:customTypeface="@string/typeface_bold" />

    <Spinner
        android:id="@+id/cancel_dialog_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawSelectorOnTop="true"
        android:entries="@array/array_cancel_order_options" />
</LinearLayout>