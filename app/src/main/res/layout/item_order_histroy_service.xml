<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="5.0dip"
    android:paddingTop="5.0dip"
    android:paddingRight="5.0dip"
>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_service_package_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
    android:layout_centerVertical="true"
    android:gravity="center_vertical"
            android:paddingRight="100dp"
 >



            <com.gopetting.android.views.TypefaceTextView

                android:id="@+id/service_package_name_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"

                android:textColor="@color/item_text_regular"
                android:textSize="@dimen/text_size_medium"
                app:customTypeface="@string/typeface_regular" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_price_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"

            android:clickable="false"
            android:orientation="vertical"
>

            <com.gopetting.android.views.TypefaceTextView
                android:id="@+id/price_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/item_text_regular"
                android:textSize="@dimen/text_size_medium"
                app:customTypeface="@string/typeface_regular" />

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>