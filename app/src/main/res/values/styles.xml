<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.Base" parent="AppTheme" />

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <!--<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />-->

    <!--<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />-->

    <style name="ActionBarThemeOverlay" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />



    <style name="AppHorizontalSeparator">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@color/separator_light_grey</item>
        <item name="android:layout_width">1.0dip</item>
        <item name="android:layout_height">32.0dip</item>
    </style>

    <!--Button Style-->
    <style name="Button">
        <item name="android:textSize">@dimen/text_size_15</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:paddingRight">10.0dip</item>
        <item name="android:minHeight">30.0dip</item>
        <item name="android:textAllCaps">true</item>
        <!--<item name="app:customTypeface">@string/typeface_bold</item>-->
    </style>


    <!--App EditText Style-->
    <style name="AppEditText">
        <item name="android:background">@drawable/edittext_login</item>
    </style>


    <style name="AppDialogTitle">
        <!--<item name="android:textSize">@dimen/text_verysmall</item>-->
        <!--<item name="android:gravity">center_vertical</item>-->
        <!--<item name="android:paddingLeft">16.0dip</item>-->
        <!--<item name="android:paddingRight">16.0dip</item>-->
        <!--<item name="android:layout_width">fill_parent</item>-->
        <!--<item name="android:layout_height">@dimen/dialog_title_height</item>-->
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/ultra_dark</item>
        <item name="customTypeface">@string/typeface_regular</item>
    </style>

    <style name="ActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/text_size_xlarge</item>

    </style>

    <style name="ActionBarSubtitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textSize">@dimen/text_size_small</item>

    </style>

    <style name="HeaderBar">
        <item name="android:background">?colorPrimary</item>
        <item name="titleTextAppearance">@style/ActionBarTitleText</item>
        <item name="subtitleTextAppearance">@style/ActionBarSubtitleText</item>
    </style>

    <!--Text View-->

    <style name="TextSectionHeader">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:paddingTop">@dimen/spacing_xsmall</item>
        <item name="android:paddingBottom">@dimen/spacing_xsmall</item>
        <item name="android:textAllCaps">true</item>
        <item name="customTypeface">@string/typeface_bold</item>
    </style>

    <style name="TextSubSectionHeader">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:paddingTop">@dimen/spacing_xsmall</item>
        <item name="android:paddingBottom">@dimen/spacing_xsmall</item>
        <item name="customTypeface">@string/typeface_regular</item>
    </style>

    <!--Text View-->


    <!--Button-->


    <!--Button-->

<!--Amit Login Activity-->
    <style name="SocialLoginButton">
        <!--<item name="android:textSize">@dimen/text_verysmall</item>-->
        <item name="android:textColor">@color/dark</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <!--<item name="android:background">@drawable/rounded_border_light</item>-->
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:paddingRight">10.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40.0dip</item>
        <item name="android:minWidth">140.0dip</item>
        <item name="android:drawablePadding">6.0dip</item>
        <item name="android:textAllCaps">true</item>
        <!--<item name="typeface">@string/typeface_bold</item>-->
    </style>

</resources>


