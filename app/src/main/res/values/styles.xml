<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="AppTheme.Base" />

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/blue_colorPrimary</item>
        <item name="colorPrimaryDark">@color/blue_colorPrimaryDark</item>
        <item name="colorAccent">@color/blue_colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="HorizontalSeparator">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@color/separator_light_grey</item>
        <item name="android:layout_width">1.0dip</item>
        <item name="android:layout_height">32.0dip</item>
    </style>

    <!--Button Style-->
    <style name="Button">
        <item name="android:textSize">@dimen/text_size_15</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:paddingRight">10.0dip</item>
        <item name="android:minHeight">30.0dip</item>
        <item name="android:textAllCaps">true</item>
        <!--<item name="app:customTypeface">@string/typeface_bold</item>-->
    </style>


    <!--App EditText Style-->
    <style name="AppEditText">
        <item name="android:background">@drawable/edittext_login</item>
    </style>


    <style name="AppDialogTitle">
        <!--<item name="android:textSize">@dimen/text_verysmall</item>-->
        <!--<item name="android:gravity">center_vertical</item>-->
        <!--<item name="android:paddingLeft">16.0dip</item>-->
        <!--<item name="android:paddingRight">16.0dip</item>-->
        <!--<item name="android:layout_width">fill_parent</item>-->
        <!--<item name="android:layout_height">@dimen/dialog_title_height</item>-->
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/ultra_dark</item>
        <item name="customTypeface">@string/typeface_regular</item>
    </style>
</resources>
